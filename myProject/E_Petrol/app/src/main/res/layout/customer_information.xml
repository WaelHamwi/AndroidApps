<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:padding="@dimen/padding_activity"

                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TableRow
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent">

        <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgCustomer"
                android:layout_weight="1"

        android:layout_gravity="center"/>

    </TableRow>

    <TableRow
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="Full Name"
                  android:layout_column="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="FullName"
                  android:id="@+id/txtFullName"
                  android:layout_weight="1"
                  android:layout_column="2"/>
    </TableRow>

    <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="Smart Card Number"
                  android:layout_column="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="FullName"
                  android:id="@+id/txtSmartCadNumber"
                  android:layout_weight="1"
                  android:layout_column="2"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="Vehicle Number"
                  android:layout_column="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="FullName"
                  android:id="@+id/txtVehicleNumber"
                  android:layout_weight="1"
                  android:layout_column="2"/>
    </TableRow>

    <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="Mobile Number"
                  android:layout_column="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="FullName"
                  android:id="@+id/txtMobileNumber"
                  android:layout_weight="1"
                  android:layout_column="2"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="Address"
                  android:layout_column="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="FullName"
                  android:id="@+id/txtAddress"
                  android:layout_weight="1"
                  android:layout_column="2"/>
    </TableRow>

    <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="ResidencePlace"
                  android:layout_column="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="FullName"
                  android:id="@+id/txtResidencePlace"
                  android:layout_weight="1"
                  android:layout_column="2"/>
    </TableRow>



    <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:layout_weight="1"
                  android:text="Amount"
                  android:layout_column="1"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/edtAmount"
                  android:inputType="number"
                  android:layout_column="2"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <Button
                android:text="Ok"
                android:id="@+id/btnWithdraw"
                android:layout_column="1"
                android:layout_weight="1"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:visibility="gone"
                android:layout_weight="1"
                android:text="Fill Free"

                android:id="@+id/btnWithdrawFree"/>

    </TableRow>
</TableLayout>